<% if action == :new %>
  <% action_url = bands_url %>
<% else %>
  <% action_url = band_url(band.id) %>
<% end %>

<form action="<%= action_url %>" method="post">
  <% if action == :edit %>
    <input type="hidden" name="_method" value="patch">
  <% end %>
  <%= auth_token %>


  <label for="band_name">Name</label>
  <input type="text" name="band[name]" value="<%= band.name %>">

  <input type="submit" value=" <%= (action == :edit) ? 'Update Band' : 'Create Band' %> ">
</form>
